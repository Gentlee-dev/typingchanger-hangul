{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "es2015",                                
    "declaration": true,
    "esModuleInterop": true,  
    "outDir": "./dist",                           
    "rootDir": "./src",
    "noImplicitAny": true,
    "strict": true,                                      
    "skipLibCheck": true,                             
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "include": [
    "src/**/*"
],
}
